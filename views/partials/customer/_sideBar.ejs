<div class="navigation">
    <div class="toggle">
        <ion-icon name="menu-outline" class="open"></ion-icon>
        <ion-icon name="close-outline" class="close"></ion-icon>
    </div>
    <ul>

        <li class="list active">
            <b></b>
            <b></b>
            <a href="/customercenter">
                <span class='icon'><ion-icon name="radio-outline"></ion-icon></span>
                <span class='title'>Live</span>
            </a>
        </li>
        <li class="list">
            <b></b>
            <b></b>
            <a href="/customercenter/orders">
                <span class='icon'><ion-icon name="bag-check-outline"></ion-icon></span>
                <span class='title'>Orders</span>
            </a>
        </li>
        <li class="list">
            <b></b>
            <b></b>
            <a href="/customercenter/reviews">
                <span class='icon'><ion-icon name="heart-outline"></ion-icon></span>
                <span class='title'>Reviews</span>
            </a>
        </li>
        <hr>
        <li class="list">
            <b></b>
            <b></b>
            <a href="/customercenter/settings">
                <span class='icon'><ion-icon name="settings-outline"></ion-icon></span>
                <span class='title'>Settings</span>
            </a>
        </li>
        <div class="nav-utils">
            <input type="checkbox" class="checkbox" id="checkbox">
            <label for="checkbox" class="label">
                <i class="fas fa-moon"></i>
                <i class="fas fa-sun"></i>
                <div class="ball"></div>
            </label>
        </div>
    </ul>

    <div class="profile-container">
        <div class="profile">
            <div class="profile-details">
                <% displayAccountInfo.forEach(accountKey => { %>
                    <% if(accountKey.userPhoto === '') { %>
                        <img src="/public/assets/images/default/user-default-profile.png" alt="<%=accountKey.displayName%>">
                    <% } else { %>
                        <img src="data:<%=accountKey.imgType%>;base64,<%=accountKey.userPhoto%>" alt="<%=accountKey.displayName%>">
                    <% } %>   
                    <div class="details">
                        <% if(accountKey.displayName === ''){ %> 
                            <div class="name">Customer</div>
                        <% }else{ %>
                            <div class="name"><%=accountKey.displayName%></div>
                        <% } %> 
                        <% if(accountKey.isVerified){ %> 
                            <div class="subType">Verified üëç</div>
                        <% }else{ %>
                            <div class="subType">Not Verified üëé</div>
                        <% } %> 
                    </div>
                <% }); %> 
            </div>
            <a href="customercenter/auth/logout">
                <ion-icon name="log-out-outline" id="logout"></ion-icon>
            </a>
        </div>
    </div>
</div>