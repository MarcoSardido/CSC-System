<div class="modal fade viewItemModal" tabindex="-1" id="viewItemModal">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title item-title"></h5>
            </div>
            <div class="modal-body item-body">
                <div class="spinner-border text-primary modal-loader" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!-- SECTION: Modal for deleting single product -->
<div class="modal fade deleteItemModal" tabindex="-1" id="deleteItemModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body delete-item-body">
                <ion-icon name="close-circle-outline"></ion-icon>
                <p class="delete-title">Are your sure?</p>
                <p class="delete-subTitle">Do you really want to delete this product? This process cannot be undone.</p>
            </div>
            <div class="modal-footer delete-item-footer">
                <button type="button" class="btn-cancel" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn-delete" id="btnDeleteItem">Delete</button>
            </div>
        </div>
    </div>
</div>


